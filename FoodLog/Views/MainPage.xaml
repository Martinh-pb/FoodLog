                <views:Food.FoodOverviewPage />
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Title="Recipe">
            <NavigationPage.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="iOS" Value="tab_feed.png"/>
